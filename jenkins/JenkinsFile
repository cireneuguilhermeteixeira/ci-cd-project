pipeline {
    agent any
    tools {
        nodejs "NodeJs"
    }
    stages {
        stage ('Install Dependencies Stage') {

            steps {
                bat 'npm install'
            }
        }

        stage ('Testing Stage') {

            steps {
                bat 'npm run unit-test'
                
            }
        }


        stage ('Deployment Stage') {
            steps {
                bat 'tar czf my_project$BUILD_NUMBER.tar.gz node_modules index.js app'
            }
        }
    }
}